
<% if turbo_frame_request? %>
  <turbo-frame id="wrap-page">
<% end %>

<div class="bg-white p-4 border border-gray-300 rounded-sm mb-4">
  <div >
    <h2 class="text-lg mb-2 font-semibold">Paciente Test </h2>
    <p><span class="font-semibold">Idade:</span> 35 anos, 3 meses, 26 dias</p>
    <p><span class="font-semibold">Convênio: </span> Particular</p>
    <p><span class="font-semibold">Primeira consulta:</span> 22/07/2025</p>
  </div>
</div>

<div class="bg-white p-4 border border-gray-300 rounded-sm mb-4">
  <label for="filtro" class="block text-sm font-medium text-gray-700 mb-2">Filtrar</label>
  <select id="filtro" name="filtro" class="block w-full h-10 border rounded-md border-gray-300
   shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm">
    <option value="">Selecione uma opção</option>
    <option selected value="atendimentos">Atendimentos</option>
    <option value="anamnese">Anamnese</option>
  </select>
</div>

<div class="bg-white p-4 rounded-sm">  

  <div class="pb-0 mb-4 flex justify-end">
    <%= link_to new_atendimento_path, class: "btn-plus" do %>
    <%= heroicon("plus", options: { class: "w-5 h-5 mr-2" }, variant: :solid) %>
      Novo Atendimento
    <% end %>
  </div>

  <div data-controller="atendimentos--grid" class="my-8"></div>
</div>

<% if turbo_frame_request? %>
  </turbo-frame>
<% end %>