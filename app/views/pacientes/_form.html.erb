<%= form_with(model: paciente, class: "contents") do |form| %>
  <% if paciente.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(paciente.errors.count, "error") %> prohibited this paciente from being saved:</h2>

      <ul class="list-disc ml-6">
        <% paciente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nome %>
    <%= form.text_field :nome, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": paciente.errors[:nome].none?, "border-red-400 focus:outline-red-600": paciente.errors[:nome].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :data_nascimento %>
    <%= form.date_field :data_nascimento, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": paciente.errors[:data_nascimento].none?, "border-red-400 focus:outline-red-600": paciente.errors[:data_nascimento].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :email %>
    <%= form.text_field :email, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": paciente.errors[:email].none?, "border-red-400 focus:outline-red-600": paciente.errors[:email].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :telefone %>
    <%= form.text_field :telefone, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": paciente.errors[:telefone].none?, "border-red-400 focus:outline-red-600": paciente.errors[:telefone].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :cpf %>
    <%= form.text_field :cpf, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": paciente.errors[:cpf].none?, "border-red-400 focus:outline-red-600": paciente.errors[:cpf].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
