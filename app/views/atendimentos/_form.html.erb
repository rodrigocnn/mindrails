<%= form_with(model: atendimento, class: "contents") do |form| %>
  <% if atendimento.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(atendimento.errors.count, "error") %> prohibited this atendimento from being saved:</h2>

      <ul class="list-disc ml-6">
        <% atendimento.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :paciente_id %>
    <%= form.text_field :paciente_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": atendimento.errors[:paciente_id].none?, "border-red-400 focus:outline-red-600": atendimento.errors[:paciente_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :data_sessao %>
    <%= form.date_field :data_sessao, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": atendimento.errors[:data_sessao].none?, "border-red-400 focus:outline-red-600": atendimento.errors[:data_sessao].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
